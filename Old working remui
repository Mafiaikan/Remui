ShowUIButton.Size = UDim2.new(0, 50, 0, 50)
ShowUIButton.Position = UDim2.new(0.9, 0, 0.05, 0)
ShowUIButton.BackgroundColor3 = Color3.new(0, 0, 0)
ShowUIButton.Text = "â™¦"
